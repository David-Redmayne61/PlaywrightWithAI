{
  "testDir": "./",
  "fullyParallel": false,
  "forbidOnly": true,
  "retries": 0,
  "workers": 1,
  "timeout": 30000,
  "expect": {
    "timeout": 5000
  },
  "reporter": [
    ["html", { 
      "outputFolder": "playwright-report", 
      "open": "never" 
    }],
    ["list"]
  ],
  "use": {
    "baseURL": "https://localhost:7031",
    "trace": "on-first-retry",
    "screenshot": "only-on-failure",
    "video": "retain-on-failure"
  },
  "projects": [
    {
      "name": "chromium",
      "use": { 
        "channel": "chrome"
      }
    }
  ]
}